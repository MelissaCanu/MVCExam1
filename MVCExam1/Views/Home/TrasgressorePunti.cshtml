@model IEnumerable<MVCExam1.Models.TrasgressorePunti>

@{
    ViewBag.Title = "PuntiDecurtatiPerTrasgressore";
}

<h2>Totale punti decurtati per trasgressore</h2>

@Html.ActionLink("Indietro", "Index", "Home", null, new { @class = "btn btn-secondary" })


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IDanagrafica)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cognome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotPunti)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IDanagrafica)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cognome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotPunti)
            </td>
        </tr>
    }

</table>
